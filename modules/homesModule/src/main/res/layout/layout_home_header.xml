<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/color_bg_blue"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_consumption_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_11" />

            <TextView
                android:id="@+id/home_finance_info_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_10"
                android:text="查看"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_30" />

            <TextView
                android:id="@+id/home_finance_info_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_10"
                android:text="微信"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_11" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/transpant_write_50">


            <LinearLayout
                android:id="@+id/home_glod_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/home_gold_integral_tv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="14"
                    android:maxLines="1"
                    android:text="- -"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_6"
                    android:text="积分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_font_11" />

            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/common_margin_10"
                android:layout_marginTop="@dimen/common_margin_10"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/home_silver_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/home_silver_integral_tv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="14"
                    android:maxLines="1"
                    android:text="- -"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    tools:text="133423424424.44333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_6"
                    android:text="积分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_font_11" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_category_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/common_margin_10"
        android:paddingRight="@dimen/common_margin_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/common_margin_10">

        <ImageView
            android:id="@+id/home_glod_dis_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_image" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_notices_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimenDividerHeight"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/common_margin_15"
        android:paddingRight="@dimen/common_margin_15">

        <ImageView
            android:id="@+id/home_notice_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_notices" />


        <com.hdh.widget.UPMarqueeView
            android:id="@+id/home_notice_uv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_margin_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:gravity="left"
            android:paddingLeft="@dimen/common_margin_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_home_calendar" />

            <TextView
                android:id="@+id/home_today_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_margin_6"
                android:gravity="center"
                android:text="2017-10-19"
                android:textColor="#c8a161"
                android:textSize="@dimen/common_font_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_weight="0.5"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_today_index_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/home_txt_red_df3535"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_10"
                android:text="今日N指数"
                android:textColor="#c8a161"
                android:textSize="@dimen/common_font_10" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_hot_recommend_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimenDividerHeight"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/common_margin_15"
        android:paddingRight="@dimen/common_margin_14">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_home_hot_recommend"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:textColor="@color/common_text_color_333333"
            android:textSize="@dimen/common_font_14" />
    </LinearLayout>

    <View style="@style/HorizontalDivider.Black" />


</LinearLayout>
