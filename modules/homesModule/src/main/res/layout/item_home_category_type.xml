<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_category_ll"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/common_margin_10"
    android:background="@drawable/item_home_recharge_category_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/merchant_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_recharge" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="@dimen/common_font_15" />

</LinearLayout>